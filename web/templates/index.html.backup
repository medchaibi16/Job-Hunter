<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Hunter - Emotion AI Internships</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1e1e2e 0%, #2d2d44 100%);
            color: #e0e0e0;
            min-height: 100vh;
        }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 280px;
            height: 100vh;
            background: rgba(0, 0, 0, 0.3);
            border-right: 1px solid rgba(255,255,255,0.1);
            padding: 20px;
            overflow-y: auto;
            z-index: 100;
        }

        .sidebar-header {
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .sidebar-title {
            font-size: 1.5em;
            font-weight: 600;
            color: #667eea;
            margin-bottom: 10px;
        }

        .sidebar-subtitle {
            font-size: 0.85em;
            opacity: 0.7;
            line-height: 1.4;
        }

        .nav-section {
            margin-bottom: 25px;
        }

        .nav-section-title {
            font-size: 0.85em;
            text-transform: uppercase;
            opacity: 0.5;
            margin-bottom: 10px;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            margin-bottom: 5px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            color: #e0e0e0;
        }

        .nav-item:hover {
            background: rgba(102, 126, 234, 0.15);
            transform: translateX(5px);
        }

        .nav-item.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .nav-icon {
            font-size: 1.3em;
            margin-right: 12px;
            width: 25px;
        }

        .nav-label {
            flex: 1;
            font-size: 0.95em;
        }

        .nav-count {
            background: rgba(255,255,255,0.15);
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 0.8em;
            font-weight: 600;
        }

        .emotion-ai-nav .nav-icon {
            color: #22c3eb;
        }

        .research-nav .nav-icon {
            color: #8b5cf6;
        }

        .adoption-nav .nav-icon {
            color: #22c55e;
        }

        .main-content {
            margin-left: 280px;
            padding: 30px;
        }

        header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            color: white;
        }

        .subtitle {
            font-size: 1.1em;
            opacity: 0.9;
            color: white;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(255,255,255,0.05);
            padding: 20px;
            border-radius: 10px;
            border: 1px solid rgba(255,255,255,0.1);
            text-align: center;
        }

        .stat-number {
            font-size: 2em;
            font-weight: bold;
            color: #667eea;
        }

        .stat-label {
            margin-top: 5px;
            opacity: 0.7;
            font-size: 0.9em;
        }

        .category-section {
            margin-bottom: 50px;
        }

        .category-header {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
            padding: 20px;
            background: rgba(255,255,255,0.03);
            border-radius: 12px;
            border-left: 5px solid;
        }

        .emotion-ai .category-header {
            border-left-color: #22c3eb;
        }

        .research .category-header {
            border-left-color: #8b5cf6;
        }

        .adoption .category-header {
            border-left-color: #22c55e;
        }

        .category-icon {
            font-size: 2.5em;
            margin-right: 15px;
        }

        .emotion-ai .category-icon {
            color: #22c3eb;
        }

        .research .category-icon {
            color: #8b5cf6;
        }

        .adoption .category-icon {
            color: #22c55e;
        }

        .category-title {
            font-size: 1.8em;
            font-weight: 600;
            color: white;
            flex: 1;
        }

        .category-count {
            background: rgba(102, 126, 234, 0.2);
            padding: 8px 16px;
            border-radius: 20px;
            color: #667eea;
            font-weight: 600;
        }

        .opportunities-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .list-item {
            background: rgba(255,255,255,0.03);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 12px;
            padding: 20px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .list-item:hover {
            transform: translateX(5px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.2);
            border-color: rgba(102, 126, 234, 0.3);
        }

        .list-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 4px;
            height: 100%;
        }

        .emotion-ai .list-item::before {
            background: linear-gradient(180deg, #22c3eb 0%, #0ea5e9 100%);
        }

        .research .list-item::before {
            background: linear-gradient(180deg, #8b5cf6 0%, #7c3aed 100%);
        }

        .adoption .list-item::before {
            background: linear-gradient(180deg, #22c55e 0%, #16a34a 100%);
        }

        .list-header {
            display: flex;
            align-items: start;
            gap: 20px;
            margin-bottom: 15px;
        }

        .rank-badge {
            font-size: 1.5em;
            font-weight: 700;
            color: rgba(255,255,255,0.3);
            min-width: 40px;
            text-align: center;
        }

        .list-main {
            flex: 1;
        }

        .list-title {
            font-size: 1.3em;
            font-weight: 600;
            color: #fff;
            margin-bottom: 8px;
            line-height: 1.4;
        }

        .list-company {
            font-size: 1em;
            color: #667eea;
            margin-bottom: 5px;
        }

        .list-meta {
            display: flex;
            align-items: center;
            gap: 15px;
            flex-wrap: wrap;
            margin-top: 8px;
        }

        .meta-item {
            font-size: 0.85em;
            opacity: 0.7;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .list-badges {
            display: flex;
            flex-direction: column;
            gap: 8px;
            align-items: flex-end;
        }

        .score-display {
            font-size: 2em;
            font-weight: 700;
            padding: 10px 20px;
            border-radius: 12px;
            text-align: center;
            min-width: 90px;
        }

        .score-high {
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
            color: white;
        }

        .score-medium {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            color: white;
        }

        .score-low {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .success-display {
            font-size: 0.9em;
            color: #22c55e;
            font-weight: 600;
        }

        .recommendation-display {
            background: rgba(255,255,255,0.1);
            padding: 6px 12px;
            border-radius: 15px;
            font-size: 0.85em;
            font-weight: 600;
        }

        .list-details {
            margin: 15px 0;
            padding: 15px;
            background: rgba(0,0,0,0.2);
            border-radius: 8px;
        }

        .detail-line {
            margin: 8px 0;
            line-height: 1.6;
            font-size: 0.95em;
        }

        .keywords-compact {
            display: flex;
            flex-wrap: wrap;
            gap: 6px;
            margin-top: 12px;
        }

        .keyword-chip {
            background: rgba(102, 126, 234, 0.15);
            color: #a5b4fc;
            padding: 4px 10px;
            border-radius: 10px;
            font-size: 0.8em;
            border: 1px solid rgba(102, 126, 234, 0.3);
        }

        .list-actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.9em;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .btn-view {
            background: rgba(102, 126, 234, 0.2);
            color: #667eea;
            border: 1px solid #667eea;
            flex: 1;
        }

        .btn-view:hover {
            background: rgba(102, 126, 234, 0.3);
            transform: translateY(-2px);
        }

        .btn-approve {
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
            color: white;
        }

        .btn-approve:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(34, 197, 94, 0.3);
        }

        .btn-refuse {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
            border: 1px solid #ef4444;
        }

        .btn-refuse:hover {
            background: rgba(239, 68, 68, 0.3);
            transform: translateY(-2px);
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background: rgba(255,255,255,0.03);
            border-radius: 15px;
            border: 1px dashed rgba(255,255,255,0.1);
            opacity: 0.6;
        }

        .empty-icon {
            font-size: 4em;
            margin-bottom: 15px;
            opacity: 0.3;
        }

        .source-tag {
            display: inline-block;
            background: rgba(255,255,255,0.05);
            padding: 2px 8px;
            border-radius: 8px;
            font-size: 0.75em;
            margin-left: 8px;
            opacity: 0.5;
        }

        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(0,0,0,0.2);
        }

        ::-webkit-scrollbar-thumb {
            background: rgba(102, 126, 234, 0.3);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: rgba(102, 126, 234, 0.5);
        }

        @media (max-width: 968px) {
            .sidebar {
                transform: translateX(-280px);
            }

            .main-content {
                margin-left: 0;
            }

            .list-header {
                flex-direction: column;
            }

            .list-badges {
                align-items: flex-start;
                flex-direction: row;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar Navigation -->
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-title">üíº Job Hunter</div>
            <div class="sidebar-subtitle">AI Internship Navigator</div>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">Categories</div>
            <a href="#emotion-ai" class="nav-item emotion-ai-nav">
                <span class="nav-icon">üíé</span>
                <span class="nav-label">Emotion AI</span>
                <span class="nav-count">{{ emotion_ai_count }}</span>
            </a>
            <a href="#research" class="nav-item research-nav">
                <span class="nav-icon">üî¨</span>
                <span class="nav-label">Research</span>
                <span class="nav-count">{{ research_count }}</span>
            </a>
            <a href="#adoption" class="nav-item adoption-nav">
                <span class="nav-icon">üí°</span>
                <span class="nav-label">Innovation</span>
                <span class="nav-count">{{ adoption_count }}</span>
            </a>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">Quick Stats</div>
            <div style="padding: 15px; background: rgba(255,255,255,0.05); border-radius: 8px;">
                <div style="margin-bottom: 10px;">
                    <div style="font-size: 1.8em; font-weight: 700; color: #667eea;">{{ total_opportunities }}</div>
                    <div style="font-size: 0.8em; opacity: 0.7;">Total Opportunities</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <header>
            <h1>üéØ Opportunity Dashboard</h1>
            <p class="subtitle">Emotion AI & Affective Computing - Sorted by Match Score</p>
        </header>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number">{{ total_opportunities }}</div>
                <div class="stat-label">Total Found</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{ emotion_ai_count }}</div>
                <div class="stat-label">üíé Emotion AI</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{ research_count }}</div>
                <div class="stat-label">üî¨ Research</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{ adoption_count }}</div>
                <div class="stat-label">üí° Innovation</div>
            </div>
        </div>

        <!-- EMOTION AI SECTION -->
        <div id="emotion-ai" class="category-section emotion-ai">
            <div class="category-header">
                <span class="category-icon">üíé</span>
                <h2 class="category-title">Emotion AI Companies</h2>
                <span class="category-count">{{ emotion_ai_count }} opportunities</span>
            </div>

            {% if emotion_ai_jobs %}
            <div class="opportunities-list">
                {% for job in emotion_ai_jobs %}
                <div class="list-item">
                    <div class="list-header">
                        <div class="rank-badge">#{{ loop.index }}</div>
                        <div class="list-main">
                            <h3 class="list-title">{{ job.title }}</h3>
                            <div class="list-company">
                                {{ job.company }}
                                <span class="source-tag">{{ job.source }}</span>
                            </div>
                            <div class="list-meta">
                                <span class="meta-item">üìç {{ job.location }}</span>
                                {% if job.analysis.breakdown.remote_available %}
                                <span class="meta-item">üåç Remote</span>
                                {% endif %}
                                {% if job.analysis.breakdown.paid %}
                                <span class="meta-item">üí∞ Paid</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="list-badges">
                            <div class="score-display {% if job.analysis.score >= 60 %}score-high{% elif job.analysis.score >= 40 %}score-medium{% else %}score-low{% endif %}">
                                {{ job.analysis.score }}
                            </div>
                            <div class="success-display">‚úì {{ job.analysis.success_chance }}% match</div>
                            <div class="recommendation-display">{{ job.analysis.recommendation }}</div>
                        </div>
                    </div>

                    <div class="list-details">
                        <div class="detail-line"><strong>{{ job.analysis.notes }}</strong></div>
                        {% if job.analysis.breakdown.emotion_keywords %}
                        <div class="keywords-compact">
                            {% for keyword in job.analysis.breakdown.emotion_keywords[:8] %}
                            <span class="keyword-chip">{{ keyword }}</span>
                            {% endfor %}
                        </div>
                        {% endif %}
                    </div>

                    <div class="list-actions">
                        <a href="{{ job.url }}" target="_blank" class="btn btn-view">
                            <span>üìñ</span> View Details
                        </a>
                        <a href="{{ url_for('approve', job_id=loop.index0) }}" class="btn btn-approve">
                            <span>‚úÖ</span> Apply
                        </a>
                        <a href="{{ url_for('refuse', job_id=loop.index0) }}" class="btn btn-refuse">
                            <span>‚ùå</span> Skip
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="empty-state">
                <div class="empty-icon">üíé</div>
                <p>No emotion AI opportunities found yet</p>
            </div>
            {% endif %}
        </div>

        <!-- RESEARCH SECTION -->
        <div id="research" class="category-section research">
            <div class="category-header">
                <span class="category-icon">üî¨</span>
                <h2 class="category-title">Research & Academic</h2>
                <span class="category-count">{{ research_count }} opportunities</span>
            </div>

            {% if research_jobs %}
            <div class="opportunities-list">
                {% for job in research_jobs %}
                <div class="list-item">
                    <div class="list-header">
                        <div class="rank-badge">#{{ loop.index }}</div>
                        <div class="list-main">
                            <h3 class="list-title">{{ job.title }}</h3>
                            <div class="list-company">
                                {{ job.company }}
                                <span class="source-tag">{{ job.source }}</span>
                            </div>
                            <div class="list-meta">
                                <span class="meta-item">üìç {{ job.location }}</span>
                                {% if job.analysis.breakdown.remote_available %}
                                <span class="meta-item">üåç Remote</span>
                                {% endif %}
                                {% if job.analysis.breakdown.paid %}
                                <span class="meta-item">üí∞ Paid</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="list-badges">
                            <div class="score-display {% if job.analysis.score >= 60 %}score-high{% elif job.analysis.score >= 40 %}score-medium{% else %}score-low{% endif %}">
                                {{ job.analysis.score }}
                            </div>
                            <div class="success-display">‚úì {{ job.analysis.success_chance }}% match</div>
                            <div class="recommendation-display">{{ job.analysis.recommendation }}</div>
                        </div>
                    </div>

                    <div class="list-details">
                        <div class="detail-line"><strong>{{ job.analysis.notes }}</strong></div>
                        {% if job.analysis.breakdown.research_keywords %}
                        <div class="keywords-compact">
                            {% for keyword in job.analysis.breakdown.research_keywords[:8] %}
                            <span class="keyword-chip">{{ keyword }}</span>
                            {% endfor %}
                        </div>
                        {% endif %}
                    </div>

                    <div class="list-actions">
                        <a href="{{ job.url }}" target="_blank" class="btn btn-view">
                            <span>üìñ</span> View Details
                        </a>
                        <a href="{{ url_for('approve', job_id=loop.index0) }}" class="btn btn-approve">
                            <span>‚úÖ</span> Apply
                        </a>
                        <a href="{{ url_for('refuse', job_id=loop.index0) }}" class="btn btn-refuse">
                            <span>‚ùå</span> Skip
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="empty-state">
                <div class="empty-icon">üî¨</div>
                <p>No research opportunities found yet</p>
            </div>
            {% endif %}
        </div>

        <!-- INNOVATION SECTION -->
        <div id="adoption" class="category-section adoption">
            <div class="category-header">
                <span class="category-icon">üí°</span>
                <h2 class="category-title">Innovation Programs</h2>
                <span class="category-count">{{ adoption_count }} opportunities</span>
            </div>

            {% if adoption_jobs %}
            <div class="opportunities-list">
                {% for job in adoption_jobs %}
                <div class="list-item">
                    <div class="list-header">
                        <div class="rank-badge">#{{ loop.index }}</div>
                        <div class="list-main">
                            <h3 class="list-title">{{ job.title }}</h3>
                            <div class="list-company">
                                {{ job.company }}
                                <span class="source-tag">{{ job.source }}</span>
                            </div>
                            <div class="list-meta">
                                <span class="meta-item">üìç {{ job.location }}</span>
                                {% if job.analysis.breakdown.remote_available %}
                                <span class="meta-item">üåç Remote</span>
                                {% endif %}
                                {% if job.analysis.breakdown.paid %}
                                <span class="meta-item">üí∞ Paid</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="list-badges">
                            <div class="score-display {% if job.analysis.score >= 60 %}score-high{% elif job.analysis.score >= 40 %}score-medium{% else %}score-low{% endif %}">
                                {{ job.analysis.score }}
                            </div>
                            <div class="success-display">‚úì {{ job.analysis.success_chance }}% match</div>
                            <div class="recommendation-display">{{ job.analysis.recommendation }}</div>
                        </div>
                    </div>

                    <div class="list-details">
                        <div class="detail-line"><strong>{{ job.analysis.notes }}</strong></div>
                        {% if job.analysis.breakdown.adoption_keywords %}
                        <div class="keywords-compact">
                            {% for keyword in job.analysis.breakdown.adoption_keywords[:8] %}
                            <span class="keyword-chip">{{ keyword }}</span>
                            {% endfor %}
                        </div>
                        {% endif %}
                    </div>

                    <div class="list-actions">
                        <a href="{{ job.url }}" target="_blank" class="btn btn-view">
                            <span>üìñ</span> View Details
                        </a>
                        <a href="{{ url_for('approve', job_id=loop.index0) }}" class="btn btn-approve">
                            <span>‚úÖ</span> Apply
                        </a>
                        <a href="{{ url_for('refuse', job_id=loop.index0) }}" class="btn btn-refuse">
                            <span>‚ùå</span> Skip
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="empty-state">
                <div class="empty-icon">üí°</div>
                <p>No innovation programs found yet</p>
            </div>
            {% endif %}
        </div>
    </div>

    <script>
        // Smooth scroll to sections
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    
                    // Update active nav item
                    document.querySelectorAll('.nav-item').forEach(item => {
                        item.classList.remove('active');
                    });
                    this.classList.add('active');
                }
            });
        });

        // Highlight current section in nav
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const id = entry.target.getAttribute('id');
                    document.querySelectorAll('.nav-item').forEach(item => {
                        item.classList.remove('active');
                    });
                    const activeNav = document.querySelector(`a[href="#${id}"]`);
                    if (activeNav) {
                        activeNav.classList.add('active');
                    }
                }
            });
        }, { threshold: 0.5 });

        document.querySelectorAll('.category-section').forEach(section => {
            observer.observe(section);
        });
    </script>
</body>
</html>